<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="BaseHumanMakeableGun" Name="Saracens_BaseMakeableLeatherGun" Abstract="true">
        <techLevel>Medieval</techLevel>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <recipeMaker>
            <researchPrerequisite>DankPyon_ProtectiveClothing</researchPrerequisite>
            <recipeUsers>
                <li>DankPyon_TailorsBench</li>
            </recipeUsers>
        </recipeMaker>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>SFE_Bullet_WhipEdge</defName>
        <label>whip</label>
        <graphicData>
            <texPath>Projectile/WhipSlash</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <speed>64</speed>
            <damageAmountBase>14</damageAmountBase>
            <arcHeightFactor>1.1</arcHeightFactor>
            <damageDef>Scratch</damageDef>
        </projectile>
    </ThingDef>
    <ThingDef ParentName="Saracens_BaseMakeableLeatherGun">
        <defName>SFE_RangedWeapon_Whip</defName>
        <label>whip</label>
        <description>The weapon of slavers and slave-drivers. This finely made length of corded leather can be used to strike at others at a distance or up close. Many a former slave knows the kiss of this tool, as it leaves its markers across their flesh.</description>
        <graphicData>
            <texPath>WeaponRanged/Battle_Whip</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Medieval</techLevel>
        <costStuffCount>60</costStuffCount>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
        </weaponTags>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>110</WorkToMake>
            <Mass>0.5</Mass>
            <Beauty>-3</Beauty>
            <Flammability>1</Flammability>
            <DeteriorationRate>2</DeteriorationRate>
            <SellPriceFactor>0.2</SellPriceFactor>
            <AccuracyTouch>0.9</AccuracyTouch>
            <AccuracyShort>0.7</AccuracyShort>
            <AccuracyMedium>0.35</AccuracyMedium>
            <AccuracyLong>0.15</AccuracyLong>
            <RangedWeapon_Cooldown>1.5</RangedWeapon_Cooldown>
        </statBases>
        <tools>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <armorPenetration>0.1</armorPenetration>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>cut</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <armorPenetration>0.1</armorPenetration>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <recipeMaker>
            <skillRequirements>
                <Crafting>2</Crafting>
            </skillRequirements>
        </recipeMaker>
        <verbs>
            <li>
                <label>whip charge</label>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>SFE_Bullet_WhipEdge</defaultProjectile>
                <soundCast>WhipHit</soundCast>
                <warmupTime>0.8</warmupTime>
                <range>4</range>
                <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
            </li>
        </verbs>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </modExtensions>
    </ThingDef>
    <ThingDef ParentName="BaseBullet">
        <defName>SFE_Bullet_SlingRock</defName>
        <label>rock</label>
        <graphicData>
            <texPath>Projectile/NomadSlingRock</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <speed>64</speed>
            <damageAmountBase>13</damageAmountBase>
            <arcHeightFactor>1.3</arcHeightFactor>
            <shadowSize>0.3</shadowSize>
            <damageDef>Blunt</damageDef>
        </projectile>
    </ThingDef>
    <ThingDef ParentName="Saracens_BaseMakeableLeatherGun">
        <defName>SFE_RangedWeapon_NomadSling</defName>
        <label>nomad sling</label>
        <description>The staff sling of the desert nomads. A simple weapon that allows one to fire stones like a sling, but without the skill of a normal sling, and at far further distances.</description>
        <graphicData>
            <texPath>WeaponRanged/Nomad_Sling</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <costStuffCount>60</costStuffCount>
        <costList>
            <WoodLog>20</WoodLog>
        </costList>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
        </weaponTags>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>15</WorkToMake>
            <Mass>0.4</Mass>
            <Beauty>-3</Beauty>
            <Flammability>1</Flammability>
            <DeteriorationRate>2</DeteriorationRate>
            <SellPriceFactor>0.2</SellPriceFactor>
            <AccuracyTouch>0.8</AccuracyTouch>
            <AccuracyShort>0.65</AccuracyShort>
            <AccuracyMedium>0.4</AccuracyMedium>
            <AccuracyLong>0.15</AccuracyLong>
            <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
        </statBases>
        <tools>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <armorPenetration>0.12</armorPenetration>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>poke</label>
                <capacities>
                    <li>Poke</li>
                </capacities>
                <armorPenetration>0.12</armorPenetration>
                <power>9</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <verbs>
            <li>
                <label>nomad sling throw</label>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>SFE_Bullet_SlingRock</defaultProjectile>
                <soundCast>SlingThrow</soundCast>
                <warmupTime>1.1</warmupTime>
                <range>25</range>
            </li>
        </verbs>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <usableWithShields>false</usableWithShields>
            </li>
        </modExtensions>
    </ThingDef>
</Defs>