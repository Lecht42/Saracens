<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <DamageDef>
        <defName>SFE_WhipWound</defName>
        <label>whip</label>
        <hasForcefulImpact>true</hasForcefulImpact>
        <makesBlood>true</makesBlood>
        <canInterruptJobs>true</canInterruptJobs>
        <externalViolence>true</externalViolence>
        <deathMessage>{0} has whiped to death.</deathMessage>
        <hediff>Scratch</hediff>
        <armorCategory>Sharp</armorCategory>
        <defaultDamage>14</defaultDamage>
        <defaultArmorPenetration>0.15</defaultArmorPenetration>
        <canUseDeflectMetalEffect>false</canUseDeflectMetalEffect>
    </DamageDef>
    <ThingDef ParentName="BaseBullet">
        <defName>SFE_Bullet_WhipEdge</defName>
        <label>whip</label>
        <graphicData>
            <texPath>Projectile/WhipSlash</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <projectile>
            <speed>64</speed>
            <arcHeightFactor>1.1</arcHeightFactor>
            <shadowSize>1</shadowSize>
            <damageDef>SFE_WhipWound</damageDef>
        </projectile>
    </ThingDef>
    <ThingDef ParentName="BaseHumanMakeableGun">
        <defName>SFE_RangedWeapon_Whip</defName>
        <label>whip</label>
        <description>The weapon of slavers and slave-drivers. This finely made length of corded leather can be used to strike at others at a distance or up close. Many a former slave knows the kiss of this tool, as it leaves its markers across their flesh.</description>
        <graphicData>
            <texPath>WeaponRanged/Battle_Whip</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <uiIconScale>1.2</uiIconScale>
        <techLevel>Medieval</techLevel>
        <costStuffCount>60</costStuffCount>
        <weaponTags>
            <li>MedievalMeleeDecent</li>
        </weaponTags>
        <statBases>
            <MaxHitPoints>100</MaxHitPoints>
            <WorkToMake>110</WorkToMake>
            <Mass>0.5</Mass>
            <Beauty>-3</Beauty>
            <Flammability>1</Flammability>
            <DeteriorationRate>2</DeteriorationRate>
            <SellPriceFactor>0.2</SellPriceFactor>
            <AccuracyTouch>0.9</AccuracyTouch>
            <AccuracyShort>0.7</AccuracyShort>
            <AccuracyMedium>0.35</AccuracyMedium>
            <AccuracyLong>0.15</AccuracyLong>
        </statBases>
        <stuffCategories>
            <li>Leathery</li>
        </stuffCategories>
        <tools>
            <li>
                <label>edge</label>
                <capacities>
                    <li>Blunt</li>
                </capacities>
                <armorPenetration>0.1</armorPenetration>
                <power>8</power>
                <cooldownTime>2</cooldownTime>
            </li>
            <li>
                <label>cut</label>
                <capacities>
                    <li>Cut</li>
                </capacities>
                <armorPenetration>0.1</armorPenetration>
                <power>10</power>
                <cooldownTime>2</cooldownTime>
            </li>
        </tools>
        <recipeMaker>
            <researchPrerequisite>DankPyon_ProtectiveClothing</researchPrerequisite>
            <skillRequirements>
                <Crafting>2</Crafting>
            </skillRequirements>
        </recipeMaker>
        <verbs>
            <li>
                <label>whip charge</label>
                <verbClass>Verb_Shoot</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>SFE_Bullet_WhipEdge</defaultProjectile>
                <warmupTime>1.5</warmupTime>
                <range>4</range>
                <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
                <muzzleFlashScale>14</muzzleFlashScale>
                <targetParams>
                    <canTargetLocations>true</canTargetLocations>
                </targetParams>
            </li>
        </verbs>
        <modExtensions>
            <li Class="VFECore.ThingDefExtension">
                <usableWithShields>true</usableWithShields>
            </li>
        </modExtensions>
    </ThingDef>
</Defs>