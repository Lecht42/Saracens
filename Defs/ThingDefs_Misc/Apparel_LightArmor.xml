<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <ThingDef ParentName="ApparelMakeableBase" Name="SFE_ClothesBase" Abstract="true">
        <recipeMaker>
            <researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
            <unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
            <recipeUsers>
                <li>DankPyon_TailorsBench</li>
            </recipeUsers>
        </recipeMaker>
        <stuffCategories>
            <li>Fabric</li>
            <li>Leathery</li>
        </stuffCategories>
        <thingCategories>
            <li>Apparel</li>
        </thingCategories>
        <apparel>
            <defaultOutfitTags>
                <li>Worker</li>
                <li>Soldier</li>
            </defaultOutfitTags>
            <canBeDesiredForIdeo>true</canBeDesiredForIdeo>
        </apparel>
    </ThingDef>
    <ThingDef ParentName="SFE_ClothesBase">
        <defName>SFE_Apparel_NomadRobe</defName>
        <label>nomad robe</label>
        <description>The Nomad's two-layer robe provides full body coverage and protection from the sun, as well as some types of cutting and blunt damage.</description>
        <graphicData>
            <texPath>Apparel/Armor/LightArmor/NomadRobe/Nomad_Robe</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <maskPath>Apparel/Armor/LightArmor/NomadRobe/Nomad_Robe_m</maskPath>
            <shaderType>CutoutComplex</shaderType>
            <color>(94, 96, 103)</color>
        </graphicData>
        <costStuffCount>80</costStuffCount>
        <recipeMaker>
            <skillRequirements>
                <Crafting>2</Crafting>
            </skillRequirements>
        </recipeMaker>
        <statBases>
            <Flammability>1.5</Flammability>
            <MaxHitPoints>130</MaxHitPoints>
            <WorkToMake>60</WorkToMake>
            <Mass>1</Mass>
            <StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
            <StuffEffectMultiplierInsulation_Cold>0.6</StuffEffectMultiplierInsulation_Cold>
            <StuffEffectMultiplierInsulation_Heat>0.5</StuffEffectMultiplierInsulation_Heat>
            <EquipDelay>1</EquipDelay>
        </statBases>
        <apparel>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <wornGraphicPath>Apparel/Armor/LightArmor/NomadRobe/Nomad_Robe</wornGraphicPath>
            <useWornGraphicMask>true</useWornGraphicMask>
            <layers>
                <li>OnSkin</li>
                <li>Middle</li>
            </layers>
        </apparel>
    </ThingDef>
    <ThingDef ParentName="SFE_ClothesBase">
        <defName>SFE_Apparel_PaddedVest</defName>
        <label>padded vest</label>
        <description>Padded vest, worn over light clothing. The most common solution in the south for basic self-defense.</description>
        <graphicData>
            <texPath>Apparel/Armor/LightArmor/PaddedVest/Padded_Vest</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <maskPath>Apparel/Armor/LightArmor/PaddedVest/Padded_Vest_m</maskPath>
