<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <ThinkTreeDef>
        <defName>Ifrit</defName>
        <thinkRoot Class="ThinkNode_Priority">
            <subNodes>
                <!-- Despawned -->
                <li Class="ThinkNode_Subtree">
                    <treeDef>Despawned</treeDef>
                </li>

                <!-- Downed -->
                <li Class="ThinkNode_Subtree">
                    <treeDef>Downed</treeDef>
                </li>

                <!-- Mental state -->
                <li Class="ThinkNode_ConditionalMentalState">
                    <state>BerserkMechanoid</state>
                    <subNodes>
                        <li Class="ThinkNode_Priority">
                            <subNodes>
                                <li Class="JobGiver_Berserk" />
                                <li Class="JobGiver_WanderAnywhere">
                                    <maxDanger>Deadly</maxDanger>
                                </li>
                            </subNodes>
                        </li>
                    </subNodes>
                </li>

                <!-- React to melee threat-->
                <li Class="JobGiver_ReactToCloseMeleeThreat" />

                <!-- Merge randoms -->
                <li Class="ThinkNode_ChancePerHour_Constant">
                    <mtbHours>3</mtbHours>
                    <subNodes>
                        <li Class="ThinkNode_Tagger">
                            <tagToGive>Misc</tagToGive>
                            <subNodes>
                                <li Class="Saracens.JobGiver_Merge" >
                                    <MaxMergeDistance>20</MaxMergeDistance>
                                </li>
                            </subNodes>
                        </li>
                    </subNodes>
                </li>

                <!-- Lord -->
                <li Class="ThinkNode_Subtree">
                    <treeDef>LordDuty</treeDef>
                </li>

                <!-- Wander -->
                <li Class="ThinkNode_Tagger">
                    <tagToGive>Idle</tagToGive>
                    <subNodes>
                        <li Class="ThinkNode_ConditionalHerdAnimal">
                            <subNodes>
                                <li Class="JobGiver_WanderHerd">
                                    <maxDanger>Deadly</maxDanger>
                                    <ticksBetweenWandersRange>120~240</ticksBetweenWandersRange>
                                </li>
                            </subNodes>
                        </li>

                        <li Class="JobGiver_WanderAnywhere">
                            <maxDanger>Deadly</maxDanger>
                            <ticksBetweenWandersRange>120~240</ticksBetweenWandersRange>
                        </li>
                    </subNodes>
                </li>

                <!-- Idle error -->
                <li Class="JobGiver_IdleError"/>
            </subNodes>
        </thinkRoot>
    </ThinkTreeDef>
</Defs>
  